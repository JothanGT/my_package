<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>


    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0.06"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.085 0 .10"/>
            <geometry>
                <box size="0.17 0.20 0.123"/>
            </geometry>
            <material name="black"/>
        </visual>
      <collision>
        <origin xyz="0.085 0 0.10"/>
        <geometry>
            <box size="0.17 0.20 0.123"/>
        </geometry>
    </collision>
    <xacro:inertial_box mass="1.5" x="0.17" y="0.20" z="0.123">
        <origin xyz="0.085 0 0.10" rpy="0 0 0"/>
    </xacro:inertial_box>

    </link>
    
    <!-- LEFT WHEEL LINK -->

    <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.12 0 0.03" rpy="0 0 0"/>
    </joint>


    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    
        <!-- LEFT WHEEL LINK -->
        
    <joint name="left_wheel_joint" type="continuous">
        <!-- El chasis es el padre -->
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <!-- Colocamos la rueda al lado izquierdo (Y positivo o negativo según tu orientación)
             y justo tocando el suelo. -->
        <origin xyz="0 0.11 0.0381" rpy="0 0 0"/>
        <!-- Eje de rotación: Y si la rueda gira hacia adelante cuando rota sobre ese eje -->
        <axis xyz="0 1 0"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <!-- Rotamos el cilindro 90° para que esté "acostado" -->
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <!-- Rueda de 3 pulgadas de diámetro (0.0381 m de radio) -->
                <cylinder radius="0.0381" length="0.02"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.0381" length="0.02"/>
            </geometry>
        </collision>

        <!-- Masa y propiedades de inercia básicas -->
        <xacro:inertial_cylinder mass="0.2" radius="0.0381" length="0.02">
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL LINK -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <!-- La rueda derecha va al lado opuesto, así que Y es negativo -->
        <origin xyz="0 -0.11 0.0381" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.0381" length="0.02"/>
            </geometry>
            <material name="white"/>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
            <geometry>
                <cylinder radius="0.0381" length="0.02"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.2" radius="0.0381" length="0.02">
            <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    
</robot>